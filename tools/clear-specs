#!/usr/bin/env node

const fs = require('fs');
const path = require('path');

// Define the file paths
const openapiPath = path.join(__dirname, '../fern/openapi.yml');
const asyncapiPath = path.join(__dirname, '../fern/asyncapi.yml');

// Check if the files exist and remove them
if (fs.existsSync(openapiPath)) {
    fs.unlinkSync(openapiPath);
    console.log('Removed ../fern/openapi.yml');
}

if (fs.existsSync(asyncapiPath)) {
    fs.unlinkSync(asyncapiPath);
    console.log('Removed ../fern/asyncapi.yml');
}

console.log('Successfully cleared specification files');
